<Window x:Class="PachaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PachaWPF"
        mc:Ignorable="d"
        Title="Pachadata Manager" Height="450" Width="625">
    <Grid>
        <DockPanel>
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar>
                    <TextBox AcceptsReturn="True" Width="100" Name="searchBox" />
                    <Button Content="Search" Click="Button_Click" />
                </ToolBar>
            </ToolBarTray>
            <DataGrid Name="dgContacts"/>
        </DockPanel>
    </Grid>
</Window>
